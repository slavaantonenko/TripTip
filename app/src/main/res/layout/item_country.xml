<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/ivCountryFlagItem"
            android:layout_width="@dimen/ic_width"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/ic_flag_sample" />

    <TextView
            android:id="@+id/tvCountryName"
            android:layout_width="@dimen/ic_width"
            android:layout_height="30dp"
            android:gravity="top|center"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="5sp"
            android:autoSizeMaxTextSize="@dimen/ic_tv_size"
            android:maxLines="2"
            android:includeFontPadding="false"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/ivCountryFlagItem"
            app:layout_constraintStart_toStartOf="@id/ivCountryFlagItem"
            app:layout_constraintEnd_toEndOf="@id/ivCountryFlagItem"
            tools:text="Germany" />

</androidx.constraintlayout.widget.ConstraintLayout>
